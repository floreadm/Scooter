<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.behappydigital.scooter" version="0.1">

	<name>Scooter</name>
	<description>Finish the race!</description>
	<author href="http://behappydigital.com" email="contact@behappydigital.com">Happy Digital</author>

	<icon src="icon-128.png" width="128" height="128" />
	<icon src="icon-256.png" width="256" height="256" gap:role="default" />

	<preference name="permissions" value="none"/>
	<preference name="android-targetSdkVersion" value="21" />

	<feature name="http://api.phonegap.com/1.0/network"/>

	<preference name="orientation" value="landscape" />
	<preference name="fullscreen" value="true" />
	<gap:config-file platform="ios" parent="UIStatusBarHidden"><true/></gap:config-file>
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance"><false/></gap:config-file>
	<preference name="target-device" value="universal" />

	<gap:plugin name="org.apache.cordova.inappbrowser" />

	<gap:splash src="preload-default-000.jpg" width="1024" height="768" />

</widget>